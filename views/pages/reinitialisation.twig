{% extends "../layouts/base.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/reinitialisation.css">
{% endblock %}

{% block main %}
	<head>
		<title>{{ title }}</title>
	</head>
	<main>
		<div id="container">
			<form action="/send-email" method="POST" id="contactForm">

				<h1>Reinitialisation de votre compte</h1>

				<label for="email">Votre e-mail :</label>
				<input type="email" id="email_sender" name="email_sender" required>

				<button type="submit" name="remember" value="send-email">
					<span class="text">Envoyer un mail</span>
				</button>
			</form>
		</div>
	</main>
{% endblock %}
