{% block style %}
	<link rel="stylesheet" href="/assets/css/header.css">
{% endblock %}
<header>

	<nav>
		<ul>
			<li>
				<a href="/home">
					<h1>GameReview</h1>
				</a>
			</li>
			{% if user %}
				{% if currentPage is not defined or currentPage != 'profile' %}
					<li>
						<p id="profile-username">{{user.username}}</p>
					</li>
				{%  endif %}
			{% endif %}
			{% if currentPage is not defined or currentPage != 'login' %}
				<div class="burger-menu">
					<div class="burger-icon">
						<span></span>
						<span></span>
						<span></span>
					</div>
					<ul class="menu-items">
						{% if user %}
							{% if user.isAdmin == true %}
								<li>
									<a href="/dashboard">Page admin</a>
								</li>
								<li>
									<a href="/logout">Déconnexion</a>
								</li>
							{% else %}
								<li>
									<a href="/profile">Profil</a>
								</li>
								<li>
									<a href="/logout">Déconnexion</a>
								</li>
							{% endif %}
						{% else %}
							<li>
								<a href="/login">Connexion</a>
							</li>
						{% endif %}
					</ul>
				</div>
			{% endif %}
		</nav>
	</header>
	{% block script %}
		<script src="/assets/js/menu-burger.js"></script>
	{% endblock %}
